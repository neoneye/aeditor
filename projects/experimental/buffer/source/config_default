# -------------------------------------------------
# config_default
# This is the default configuration file for AEditor
# This configuration file is only used in case 
# a $HOME/.aeditor file cannot be found.
# -------------------------------------------------

mode :ruby do |m|
	m.tabsize = 2
	m.file_suffixes = %w(rb)
	m.lexer = :ruby
	m.cursor_through_tabs = true
end

mode :c do |m|
	m.tabsize = 4
	m.file_suffixes = %w(c cpp cxx cc h hpp hxx hh)
	m.cursor_through_tabs = false
	m.lexer = :cpp
end

