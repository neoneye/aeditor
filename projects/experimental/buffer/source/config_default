def theme_import(theme_hash, name=nil)
	name ||= :imported
	theme name do |t|
		theme_hash.each do |key, (bg, fg)|
			t.set_rgb_pair key, bg, fg
		end
	end
end

theme_import(theme_gvim, 'gvim')
theme_import(theme_turbo, 'turbo')
